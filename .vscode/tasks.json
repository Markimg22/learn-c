{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Compile C for Debugger",
			"command": "/usr/bin/clang",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"-O0",
				"-Wall",
				"-Wextra",
				"-std=c17",
				"${fileDirname}/*.c",
				"-o",
				"${fileDirname}/bin/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger.",
		}
	],
	"version": "2.0.0"
}